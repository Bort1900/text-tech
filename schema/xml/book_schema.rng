<grammar xmlns="http://relaxng.org/ns/structure/1.0"
         datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <start>
    <element name="reviews">
      <zeroOrMore>
        <ref name="review"/>
      </zeroOrMore>
    </element>
  </start>
  <!-- Element representing an Amazon book review -->
  <define name="review">
    <element name="review">
      <ref name="book"/>
      <ref name="sentiments"/>
    </element>
  </define>
  <!-- Element representing  a book with its Amazon metadata-->
  <define name="book">
    <element name="book">
      <attribute name="asin">
        <ref name="non_empty"/>
      </attribute>
      <attribute name="title">
        <ref name="non_empty"/>
      </attribute>
      <attribute name="author">
        <data type="string"></data>
      </attribute>
      <attribute name="genre">
        <ref name="non_empty"/>
      </attribute>
      <attribute name="price">
        <ref name="dollars"/>
      </attribute>
    </element>
  </define>
  <define name="sentiments">
    <element name="sentiments">
      <zeroOrMore>
        <ref name="phrase"/>
      </zeroOrMore>
    </element>
  </define>
  <!-- Element consisting of a review sentence and its sentiment polarity  -->
  <define name="phrase">
    <element name="phrase">
      <attribute name="polarity">
        <choice>
          <value>negative</value>
          <value>positive</value>
          <value>neutral</value>
        </choice>
      </attribute>
      <text/>
    </element>
  </define>
  <!-- Complex type of a non empty string  -->
  <define name="non_empty">
    <data type="string">
      <param name="minLength">1</param>
    </data>
  </define>
  <!-- Complex type of a string in format of a dollar value with two decimals  -->
  <define name="dollars">
    <data type="string">
      <param name="pattern">$\d{1,}(,\d{3})*.\d{2}</param>
    </data>
  </define>
  <!-- Complex type of an empty string  -->
  <define name="empty">
    <data type="string">
      <param name="maxLength">0</param>
    </data>
  </define>
</grammar>